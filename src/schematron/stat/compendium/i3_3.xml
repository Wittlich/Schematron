        <row code="13" type="F" name="       осуществляющие сельскохозяйственную деятельность" />
        <row code="14" type="F" name="       сельскохозяйственные  потребительские кооперативы" />
        <row code="15" type="F" name="            в том числе кредитные сельскохозяйственные потребительские кооперативы" />
